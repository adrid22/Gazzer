{
  "expo": {
    "name": "Gazzer",
    "slug": "gazzer",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#8A4AF3"
    },
    "updates": {
      "fallbackToCacheTimeout": 0,
      "enabled": true
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.filipsapps.gazzer",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to upload images for events.",
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to show nearby events and friends.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs access to your location to show nearby events and friends even when the app is in the background."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#8A4AF3"
      },
      "package": "com.filipsapps.gazzer",
      "permissions": [
        "CAMERA",
        "READ_MEDIA_IMAGES",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "SCHEDULE_EXACT_ALARM"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "scheme": "gazzer",
    "extra": {
      "eas": {
        "projectId": "gazzer-1a03c"
      }
    },
    "newArchEnabled": false,
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app needs access to your photos to upload images for events."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Gazzer to access your location to show nearby events and friends."
        }
      ],
      [
        "expo-notifications",
        {
          "sounds": [
            "./assets/notification.mp3"
          ],
          "icon": "./assets/icon.png"
        }
      ],
      "expo-font"
    ]
  }
}
